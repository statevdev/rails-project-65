= simple_form_for(@bulletin) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  = f.input :title
  = f.association :category, required: true
  = f.input :description
  = f.input :image, as: :file, required: true

  = f.button :submit, t('simple_form.buttons.bulletin.new'), class: 'btn btn-primary'